{
  "name": "tiecode-multi-platform-ide",
  "displayName": "Tiecode Multi-Platform IDE",
  "description": "Tiecode 编程语言的开发套件，提供可视化开发界面和布局支持",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.105.0"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "publisher": "tiecode",
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "android",
    "windows",
    "linux"
  ],
  "activationEvents": [
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tiecode.openVisualEditor",
        "title": "打开 Tiecode IDE",
        "category": "Tiecode",
        "icon": "$(code)"
      },
      {
        "command": "tiecode.selectPlatform",
        "title": "选择编译平台",
        "category": "Tiecode",
        "icon": "$(device-desktop)"
      },
      {
        "command": "tiecode.compile",
        "title": "编译项目",
        "category": "Tiecode",
        "icon": "$(play)"
      },
      {
        "command": "tiecode.tmakeBuild",
        "title": "TMake 构建",
        "category": "Tiecode",
        "icon": "$(gear)"
      },
      {
        "command": "tiecode.tmakeClean",
        "title": "TMake 清理",
        "category": "Tiecode",
        "icon": "$(trash)"
      },
      {
        "command": "tiecode.tmakePrecompile",
        "title": "TMake 预编译",
        "category": "Tiecode",
        "icon": "$(terminal)"
      },
      {
        "command": "tiecode.preview",
        "title": "实时预览",
        "category": "Tiecode",
        "icon": "$(eye)"
      },
      {
        "command": "tiecode.createProject",
        "title": "新建结绳项目",
        "category": "Tiecode",
        "icon": "$(new-folder)"
      },
      {
        "command": "tiecode.tmakeCreateProject",
        "title": "新建 TMake 项目",
        "category": "Tiecode",
        "icon": "$(new-folder)"
      },
      {
        "command": "tiecode.tmakeCreatePlugin",
        "title": "在当前项目中创建 TMake 插件",
        "category": "Tiecode",
        "icon": "$(add)"
      },
      {
        "command": "tiecode.tmakeVersion",
        "title": "TMake 版本信息",
        "category": "Tiecode",
        "icon": "$(info)"
      },
      {
        "command": "tiecode.tmakeHelp",
        "title": "TMake 帮助",
        "category": "Tiecode",
        "icon": "$(question)"
      },
      {
        "command": "tiecode.editProjectConfig",
        "title": "编辑项目配置",
        "category": "Tiecode",
        "icon": "$(settings)"
      },
      {
        "command": "tiecode.refreshExplorer",
        "title": "刷新",
        "category": "Tiecode",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "tiecode.openVisualEditor",
          "when": "true"
        },
        {
          "command": "tiecode.selectPlatform",
          "when": "true"
        },
        {
          "command": "tiecode.compile",
          "when": "true"
        },
        {
          "command": "tiecode.tmakeBuild",
          "when": "true"
        },
        {
          "command": "tiecode.tmakeClean",
          "when": "true"
        },
        {
          "command": "tiecode.tmakePrecompile",
          "when": "true"
        },
        {
          "command": "tiecode.preview",
          "when": "true"
        },
        {
          "command": "tiecode.createProject",
          "when": "true"
        },
        {
          "command": "tiecode.tmakeCreateProject",
          "when": "true"
        },
        {
          "command": "tiecode.tmakeCreatePlugin",
          "when": "true"
        },
        {
          "command": "tiecode.tmakeVersion",
          "when": "true"
        },
        {
          "command": "tiecode.tmakeHelp",
          "when": "true"
        },
        {
          "command": "tiecode.editProjectConfig",
          "when": "true"
        },
        {
          "command": "tiecode.refreshExplorer",
          "when": "true"
        }
      ],
      "explorer/context": [
        {
          "command": "tiecode.createProject",
          "when": "explorerResourceIsFolder",
          "group": "tiecode@1"
        }
      ],
      "view/title": [
        {
          "command": "tiecode.createProject",
          "when": "view == tiecodeExplorer",
          "group": "navigation"
        },
        {
          "command": "tiecode.tmakeBuild",
          "when": "view == tiecodeExplorer",
          "group": "navigation"
        },
        {
          "command": "tiecode.tmakeClean",
          "when": "view == tiecodeExplorer",
          "group": "navigation"
        },
        {
          "command": "tiecode.tmakePrecompile",
          "when": "view == tiecodeExplorer",
          "group": "navigation"
        },
        {
          "command": "tiecode.tmakeCreateProject",
          "when": "view == tiecodeExplorer",
          "group": "navigation"
        },
        {
          "command": "tiecode.tmakeCreatePlugin",
          "when": "view == tiecodeExplorer",
          "group": "navigation"
        },
        {
          "command": "tiecode.refreshExplorer",
          "when": "view == tiecodeExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "tiecode.selectPlatform",
          "when": "view == tiecodeExplorer && viewItem == platform",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tiecode",
          "title": "Tiecode IDE",
          "icon": "resources/tiecode-icon.svg"
        }
      ]
    },
    "views": {
      "tiecode": [
        {
          "id": "tiecodeExplorer",
          "name": "Tiecode 功能",
          "when": "true"
        }
      ]
    },
    "languages": [
      {
        "id": "tiecode",
        "aliases": [
          "Tiecode",
          "tiecode"
        ],
        "extensions": [
          ".t"
        ]
      }
    ],
    "grammars": [
      {
        "language": "tiecode",
        "scopeName": "source.tiecode",
        "path": "./tiecode.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src",
    "dev": "webpack serve --config src/webview/frontend/webpack.dev.js",
    "dev:frontend": "cd src/webview/frontend && webpack serve --config webpack.dev.js"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "css-loader": "^6.8.1",
    "eslint": "^9.36.0",
    "html-webpack-plugin": "^5.6.0",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.5",
    "@mui/material": "^7.3.5",
    "@types/iconv-lite": "^0.0.1",
    "iconv-lite": "^0.7.0",
    "react-icons": "^5.5.0"
  }
}
