{
  "name": "tiecode-multi-platform-ide",
  "displayName": "Tiecode Multi-Platform IDE",
  "description": "Tiecode 编程语言的完整开发套件，提供可视化开发界面和多平台编译支持。支持 Android、Windows、Linux 和 HarmonyOS 平台，包含语法高亮、代码补全、实时预览和一和键编译",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "publisher": "tiecode",
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "tiecode",
    "multi-platform",
    "ide",
    "compiler",
    "android",
    "windows",
    "linux",
    "harmonyos"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "_testMinimal": "./dist/extension.minimal.js",
  "_testMain": "./dist/extension.test.js",
  "contributes": {
    "commands": [
      {
        "command": "tiecode.openVisualEditor",
        "title": "打开可视化编辑器",
        "category": "Tiecode",
        "icon": "$(code)"
      },
      {
        "command": "tiecode.selectPlatform",
        "title": "选择编译平台",
        "category": "Tiecode",
        "icon": "$(device-desktop)"
      },
      {
        "command": "tiecode.compile",
        "title": "编译项目",
        "category": "Tiecode",
        "icon": "$(play)"
      },
      {
        "command": "tiecode.preview",
        "title": "实时预览",
        "category": "Tiecode",
        "icon": "$(eye)"
      },
      {
        "command": "tiecode.showWelcome",
        "title": "显示欢迎页面",
        "category": "Tiecode",
        "icon": "$(home)"
      },
      {
        "command": "tiecode.resetWelcome",
        "title": "重置欢迎页面状态",
        "category": "Tiecode",
        "icon": "$(refresh)"
      },
      {
        "command": "tiecode.createProject",
        "title": "新建结绳项目",
        "category": "Tiecode",
        "icon": "$(new-folder)"
      },
      {
        "command": "tiecode.refreshExplorer",
        "title": "刷新",
        "category": "Tiecode",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "tiecode.openVisualEditor",
          "when": "true"
        },
        {
          "command": "tiecode.selectPlatform",
          "when": "true"
        },
        {
          "command": "tiecode.compile",
          "when": "true"
        },
        {
          "command": "tiecode.preview",
          "when": "true"
        },
        {
          "command": "tiecode.showWelcome",
          "when": "true"
        },
        {
          "command": "tiecode.createProject",
          "when": "true"
        },
        {
          "command": "tiecode.refreshExplorer",
          "when": "true"
        }
      ],
      "explorer/context": [
        {
          "command": "tiecode.createProject",
          "when": "explorerResourceIsFolder",
          "group": "tiecode@1"
        }
      ],
      "view/title": [
        {
          "command": "tiecode.createProject",
          "when": "view == tiecodeExplorer",
          "group": "navigation"
        },
        {
          "command": "tiecode.refreshExplorer",
          "when": "view == tiecodeExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "tiecode.selectPlatform",
          "when": "view == tiecodeExplorer && viewItem == platform",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tiecode",
          "title": "Tiecode IDE",
          "icon": "resources/tiecode-icon.svg"
        }
      ]
    },
    "views": {
      "tiecode": [
        {
          "id": "tiecodeExplorer",
          "name": "Tiecode 功能",
          "when": "true"
        }
      ]
    },
    "viewsWelcome": {
      "tiecode": [
        {
          "view": "tiecodeExplorer",
          "contents": "欢迎使用 Tiecode Multi-Platform IDE！\n[打开可视化编辑器](command:tiecode.openVisualEditor)\n[新建项目](command:tiecode.createProject)\n[显示欢迎页面](command:tiecode.showWelcome)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3"
  }
}
